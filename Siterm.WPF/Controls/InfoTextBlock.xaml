<UserControl x:Class="Siterm.WPF.Controls.InfoTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Siterm.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource MahApps.Brushes.Accent}">
        <TextBlock
            Text="{Binding Path=Text, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type local:InfoTextBlock}}}"
            HorizontalAlignment="Center"
            Foreground="{StaticResource MahApps.Brushes.IdealForeground}"
            TextWrapping="Wrap"
            FontSize="20"
            Padding="0,5" />
    </Grid>
</UserControl>
