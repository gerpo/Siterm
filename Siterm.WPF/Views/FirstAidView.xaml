<UserControl
    x:Class="Siterm.WPF.Views.FirstAidView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Siterm.Settings.Controls;assembly=Siterm.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Siterm.WPF.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Siterm.Settings.Models;assembly=Siterm.Settings"
    xmlns:settings="clr-namespace:Siterm.Settings.Resources;assembly=Siterm.Settings"
    xmlns:viewModels="clr-namespace:Siterm.WPF.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:FirstAidViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <FlowDocumentScrollViewer
            Grid.Column="0"
            Document="{Binding FirstAidInfoFile}"
            VerticalScrollBarVisibility="Auto" />
        <DataGrid
            Grid.Column="1"
            AutoGeneratingColumn="DataGrid_OnAutoGeneratingColumn"
            IsReadOnly="True"
            ItemsSource="{Binding FirstResponders}" />
    </Grid>
</UserControl>
